<%- include('../includes/head.ejs') %>
<%- include('../includes/navigation.ejs') %>
    <main>
        <h1>My Products</h1>
        <p class="list">List of products</p>
        <section class="products">
        <% if(prod.length > 0) { %>
            <% for(let product of prod) { %>
                <div class="products_desc">
                    <h2><%= product.title %></h2>
                    <img class="image" src="<%= product.imageUrl %>" alt="image"/>
                    <div>
                        <button style="width: 4rem; background-color: green;">Edit</button>
                        <button style="width: 4rem; background-color: red;">Delete</button>
                    </div>
                </div>
            <% } %>
        <% } else { %>
            <h2 class="no_data">No products found!</h2>
            <% } %>
        </section>
    </main>
</body>
</html>