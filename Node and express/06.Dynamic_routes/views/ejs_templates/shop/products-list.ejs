<%- include('../includes/head.ejs') %>
<%- include('../includes/navigation.ejs') %>
    <main>
        <h1>My Products</h1>
        <p class="list">List of products</p>
        <section class="products">
        <% if(prod.length > 0) { %>
            <% for(let product of prod) { %>
                <div class="products_desc">
                    <h2><%= product.title %></h2>
                    <img class="image" src="<%= product.imageUrl %>" alt="image"/>
                    <p>Rs.<%= product.price %></p>
                    <p><%= product.description %></p>
                    <a href="/admin/shop/products/<%= product.id %>">Details</a>
                    <form action="/admin/cart" method="post">
                        <button type="submit">Add To cart</button>
                        <input type="hidden" name="productId" value="<%= product.id %>">
                    </form>
                </div>
            <% } %>
        <% } else { %>
            <h2 class="no_data">No products found!</h2>
            <% } %>
        </section>
    </main>
</body>
</html>